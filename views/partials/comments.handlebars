<div class="comments">
  {{#each this}} <!-- "this" is referring to the comments array that contains all the comment objects -->
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>